<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AlbumWidget" parent="GtkWidget">
    <child>
      <object class="GtkBox" id="inner_box">
        <property name="orientation">1</property>
        <property name="spacing">0</property>
        <property name="focusable">true</property>
        <property name="halign">3</property>
        <property name="valign">3</property>
        <property name="hexpand">false</property>
        <property name="vexpand">false</property>
        <child>
          <object class="GtkBox">
            <property name="width-request">250</property>
            <property name="height-request">250</property>
            <property name="css-name">album-art</property>
            <property name="overflow">1</property>
            <child>
              <object class="GtkImage" id="cover">
                <property name="name">album_cover</property>
                <property name="vexpand">true</property>
                <property name="hexpand">true</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="album_name">
            <property name="name">album_name</property>
            <property name="label">@NO NAME</property>
            <property name="wrap">true</property>
            <property name="max-width-chars">20</property>
            <property name="width-chars">20</property>
            <property name="ellipsize">end</property>
            <property name="css-classes">bold</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="artist_name">
            <property name="name">artist_name</property>
            <property name="label">Unknown Artist</property>
            <property name="wrap">true</property>
            <property name="max-width-chars">20</property>
            <property name="width-chars">20</property>
            <property name="ellipsize">end</property>
            <property name="css-classes">dimmed</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
